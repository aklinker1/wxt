{
  "name": "wxt-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "setup:deps": "pnpm --filter wxt build",
    "dev": "pnpm setup:deps && wxt",
    "build": "pnpm setup:deps && wxt build",
    "build:all": "pnpm setup:deps && run-s -s 'build:all:*'",
    "build:all:chrome-mv3": "wxt build",
    "build:all:chrome-mv2": "wxt build --mv2",
    "build:all:firefox-mv3": "wxt build -b firefox --mv3",
    "build:all:firefox-mv2": "wxt build -b firefox",
    "test": "pnpm setup:deps && vitest",
    "zip": "pnpm setup:deps && wxt zip",
    "compile": "pnpm setup:deps && tsc --noEmit",
    "postinstall": "pnpm setup:deps && wxt prepare"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.14",
    "sass": "^1.69.5",
    "typescript": "^5.3.2",
    "wxt": "workspace:*"
  }
}
